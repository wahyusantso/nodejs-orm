generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

//create model
model sample {
  id   String @id //primary key
  name String
}

model Customer {
  id       String    @id
  name     String
  email    String    @unique
  phone    String    @unique
  wallet   Wallet? // One-to-one relation with Wallet and nullable
  comments Comment[] // One-to-many relation with Comment

  @@map("customers") // Map to "customers" table in the database
}

model Comment {
  id          Int      @id @default(autoincrement())
  title       String
  description String? //allow nullable
  customer_id String
  customer    Customer @relation(fields: [customer_id], references: [id])

  @@map("comments")
}

model Wallet {
  id          String   @id
  balance     Int
  customer_id String   @unique
  customer    Customer @relation(fields: [customer_id], references: [id]) //define relation

  @@map("wallet")
}

model Product {
  id       Int    @id
  name     String
  price    Int
  stock    Int
  category String

  @@map("products")
}

model Categories {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(100)

  @@map("categories")
}
