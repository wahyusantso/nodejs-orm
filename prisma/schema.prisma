generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Likes {
  customer_id String    @db.VarChar(100)
  product_id  String    @db.VarChar(100)
  customers   customers @relation(fields: [customer_id], references: [id])
  products    products  @relation(fields: [product_id], references: [id])

  @@id([customer_id, product_id])
  @@index([product_id], map: "Likes_product_id_fkey")
}

model categories {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(100)
}

model comments {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  customer_id String
  customers   customers @relation(fields: [customer_id], references: [id])

  @@index([customer_id], map: "comments_customer_id_fkey")
}

model customers {
  id       String     @id
  name     String
  email    String     @unique
  phone    String     @unique
  Likes    Likes[]
  comments comments[]
  wallet   wallet?
  products products[] @relation("loves")
}

model products {
  id        String      @id
  name      String
  price     Int
  stock     Int
  category  String
  Likes     Likes[]
  customers customers[] @relation("loves")
}

model sample {
  id   String @id
  name String
}

model wallet {
  id          String    @id
  balance     Int
  customer_id String    @unique
  customers   customers @relation(fields: [customer_id], references: [id])
}
