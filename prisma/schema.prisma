generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

//create model
model sample {
  id   String @id //primary key
  name String
}

model Customer {
  id    String @id
  name  String
  email String @unique
  phone String @unique

  @@map("customers") // Map to "customers" table in the database
}

model Product {
  id       Int    @id
  name     String
  price    Int
  stock    Int
  category String

  @@map("products")
}

model Categories {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(100)

  @@map("categories")
}
